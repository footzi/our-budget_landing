    h2.about__title#about-title О нас
    .about__content
        picture.about__image
            source(srcset="./images/about-0.5x.avif" media="(max-width: 575px)")
            source(srcset="./images/about-0.5x.webp" media="(max-width: 575px)")
            source(srcset="./images/about.avif" media="(min-width: 576px)")
            source(srcset="./images/about.webp" media="(min-width: 576px)")
